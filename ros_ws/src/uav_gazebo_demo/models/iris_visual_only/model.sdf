<?xml version="1.0" ?>
<sdf version="1.6">
  <model name="iris_visual_only">
    <static>false</static>

    <link name="base_link">
      <pose>0 0 0 0 0 0</pose>

      <inertial>
        <mass>1.0</mass>
        <inertia>
          <ixx>0.02</ixx><iyy>0.02</iyy><izz>0.04</izz>
          <ixy>0</ixy><ixz>0</ixz><iyz>0</iyz>
        </inertia>
      </inertial>

      <!-- 简单碰撞：稳定即可 -->
      <collision name="collision">
        <geometry>
          <box><size>0.45 0.45 0.15</size></box>
        </geometry>
      </collision>

      <!-- 外观：使用 iris 的 STL -->
      <visual name="visual">
        <pose>0 0 0 0 0 0</pose>
        <geometry>
          <mesh>
            <uri>model://iris/meshes/iris.stl</uri>
            <scale>1 1 1</scale>
          </mesh>
        </geometry>
      </visual>
    </link>
  </model>
</sdf>
